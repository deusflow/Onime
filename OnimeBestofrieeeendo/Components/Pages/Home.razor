        {
            await JsRuntime.InvokeVoidAsync("showFunnyPopup", "–û—à–∏–±–∫–∞ üòµ", "–ü–æ–∫—É–ø–∫–∞ –Ω–µ —É–¥–∞–ª–∞—Å—å. –ü–æ–ø—Ä–æ–±—É–π –µ—â—ë —Ä–∞–∑.");
        }
